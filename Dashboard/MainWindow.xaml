        <Grid.Background>
            <ImageBrush ImageSource="Resources/Background/background3.png"/>
        </Grid.Background>

        <local:LoginControl Visibility="Collapsed" x:Name="_LoginControl"/>
        <local:NavigationControl Visibility="Visible" x:Name="_NavigationControl" Margin="20,0,-9,660"/>
        <local:UserDetails Visibility="Visible" x:Name="_UserDetailsControl" Margin="10,44,735,474"/>
        <local:NoticesControl Visibility="Visible" x:Name="_NoticesControl" Margin="363,44,20,91"/>
        <local:TimetableControl Visibility="Visible" x:Name="_TimetableControl" Margin="10,236,735,76"/>
    </Grid>
</Window>
