<UserControl x:Class="Dashboard.UserDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard"
             mc:Ignorable="d" Width="335" Height="174.196">
    <Grid Background="#BFE6E5E5">
        <Image Margin="3,0,142,19" Grid.Row="0">
            <Image.Source>
                <BitmapImage UriSource="../Resources/Icons/defaultprofile.png"/>
            </Image.Source>
        </Image>

        <StackPanel Margin="182,10,0,0">
            <Label x:Name="UserID" Content="UserID" FontSize="24" FontWeight="Bold" Foreground="Black"></Label>
            <Label x:Name="DayLabel" Content="Day" FontSize="22" FontWeight="Bold" Foreground="#FF0E0E0E"></Label>
            <Label x:Name="WeekLabel" Content="Week X" FontSize="24" FontWeight="Bold" Foreground="#FF0E0E0E" Height="38"/>
        </StackPanel>
    </Grid>
</UserControl>
